@inherits LayoutComponentBase

<nav class="navbar navbar-expand-sm navbar-light bg-light">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav">

            <li class="nav-item">
                <a class="nav-link" aria-current="page" @onclick="@ToggleSidebar">
                    <img class="hide-show-bt" src="./dots.svg" alt="Menu" draggable="false" />
                </a>
            </li>

            <li class="nav-item active d-flex align-items-center">
                <a class="navbar-brand" href="#">
                    <img class="logo-app" src="./logosnoeuron.svg" alt="Logo Noeuron" draggable="false" />
                </a>
            </li>
        </ul>
    </div>
</nav>

<div class="page">
    <Sidebar IsShown="@_isSidebarShown" Width="200" />
    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<CascadingBlazoredModal />
<style>

</style>

@code {
    private bool _isSidebarShown = true;

    private void ToggleSidebar()
    {
        _isSidebarShown = !_isSidebarShown;
    }
}
